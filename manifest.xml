<package>
  <description brief="rviz_camera_stream">
    Modified RViz camera plugin.
    Allows to output the rviz display view as an Image topic.

  </description>
  <author>Mikhail Medvedev</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/rviz_camera_stream</url>
  <depend package="interactive_markers"/>
  <depend package="visualization_msgs"/>
  <depend package="roscpp"/>
  <depend package="std_msgs"/>
  <depend package="rviz"/>
  <depend package="image_transport"/>

  <depend package="ogre"/>
  <depend package="ogre_tools"/>

  <export>
      <!--<rosdoc config="${prefix}/rosdoc.yaml"/>-->
      <rviz plugin="${prefix}/plugin_description.xml"/>
  </export>
</package>
